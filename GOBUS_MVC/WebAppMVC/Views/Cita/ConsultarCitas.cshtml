@model IEnumerable<WebAppMVC.Models.UnionCitaSucursalCliente>

@{
    ViewBag.Title = "ConsultarCitas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Citas</h2>

<p>
    @Html.ActionLink("Agregar cita", "AgregarCita")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApellidosCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreSucursal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Placas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApellidosCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreSucursal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Placas)
        </td>
        <td>
            @Html.ActionLink("Editar", "ModificarCita", new { id=item.CitaId }) |
            @Html.ActionLink("Detalles", "ConsultarCita", new { id=item.CitaId }) |
            @Html.ActionLink("Eliminar", "EliminarCita", new { id=item.CitaId })
        </td>
    </tr>
}

</table>
